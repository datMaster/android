<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top">

        <Spinner
            android:background="@drawable/left_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner"
            android:layout_row="0"
            android:layout_column="0"
            android:spinnerMode="dropdown"
            android:entries="@array/spin_elements" />

        <Spinner
            android:background="@drawable/set"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner2"
            android:layout_row="0"
            android:layout_column="1"
            android:entries="@array/spin_elements"/>

        <Spinner
            android:background="@drawable/set"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner3"
            android:layout_row="0"
            android:layout_column="2"
            android:entries="@array/spin_elements"/>

        <Spinner
            android:background="@drawable/right_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner4"
            android:layout_row="0"
            android:layout_column="3"
            android:entries="@array/spin_elements"/>

        <Spinner
            android:background="@drawable/left_up"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner5"
            android:layout_row="1"
            android:layout_column="0" />

        <Spinner
            android:background="@drawable/horizontal_line"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner6"
            android:layout_row="1"
            android:layout_column="1" />

        <Spinner
            android:background="@drawable/right_up"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner7"
            android:layout_row="1"
            android:layout_column="2" />

        <Spinner
            android:background="@drawable/set"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner8"
            android:layout_row="1"
            android:layout_column="3" />

        <Spinner
            android:background="@drawable/set"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner9"
            android:layout_row="2"
            android:layout_column="0" />

        <Spinner
            android:background="@drawable/set"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner10"
            android:layout_row="2"
            android:layout_column="1" />

        <Spinner
            android:background="@drawable/set"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner12"
            android:layout_row="2"
            android:layout_column="3" />

        <Spinner
            android:background="@drawable/set"
            android:entries="@array/spin_elements"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/spinner11"
            android:layout_row="2"
            android:layout_column="2" />

    </GridLayout>
</FrameLayout>
